{
  "name": "mobile-app-starter",
  "version": "2.2.0",
  "description": "React Native Expo starter template with TypeScript and essential features",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "test": "jest --passWithNoTests",
    "test:unit": "jest __tests__/unit --passWithNoTests",
    "test:integration": "jest __tests__/integration --passWithNoTests",
    "test:smoke": "jest __tests__/smoke --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --passWithNoTests",
    "test:all": "npm run test",
    "quality:check": "npm run type-check && npm run lint && npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules .expo .npm-cache dist build coverage && npm cache clean --force",
    "security:audit": "npm audit --audit-level high",
    "security:secrets": "node -e \"const fs=require('fs');const content=fs.readFileSync('package.json','utf8');if(/[\\\"\\'](?=.*\\d)[a-zA-Z0-9+/]{20,}[\\\"\\']/.test(content)){console.error('❌ Potential hardcoded secrets in package.json');process.exit(1)}else{console.log('✅ No secrets detected in package.json')}\"",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:upload": "lhci upload",
    "validate:all": "npm run type-check && npm run lint && npm run test && npm run security:audit",
    "lint:fix": "eslint . --ext .js,.jsx,.mjs,.cjs,.ts,.tsx,.html --fix && stylelint \"**/*.{css,scss,sass,less,pcss}\" --fix --allow-empty-input",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/bottom-tabs": "^7.12.0",
    "@react-navigation/material-top-tabs": "^7.4.13",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/native-stack": "^7.12.0",
    "@react-navigation/stack": "^7.7.1",
    "expo": "^54.0.33",
    "expo-constants": "~18.0.8",
    "expo-font": "~14.0.0",
    "expo-linking": "~8.0.11",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-native": "0.83.1",
    "react-native-gesture-handler": "~2.30.0",
    "react-native-reanimated": "~4.2.1",
    "react-native-safe-area-context": "5.6.2",
    "react-native-screens": "~4.23.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react-native": "^14.0.0-beta.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.13",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.12.0",
    "eslint-config-expo": "^10.0.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.4",
    "jest": "^30.2.0",
    "jest-expo": "~54.0.17",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "react-test-renderer": "19.2.4",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "~5.9.3"
  },
  "overrides": {
    "semver": "7.7.3",
    "@expo/image-utils": {
      "semver": "7.7.3"
    },
    "@expo/prebuild-config": {
      "semver": "7.7.3"
    }
  },
  "keywords": [
    "react-native",
    "expo",
    "typescript",
    "mobile",
    "starter"
  ],
  "author": "Your Name",
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx,mjs,cjs,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "./jest.setup.js",
      "@testing-library/react-native/matchers"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native|@react-navigation|@react-native-community|expo(nent)?|@expo|expo-status-bar|@expo/vector-icons|expo-constants|expo-linking|expo-font|expo-splash-screen|react-native-gesture-handler|react-native-reanimated|react-native-safe-area-context|react-native-screens|expo-modules-core)/)"
    ],
    "moduleNameMapper": {
      "^react-test-renderer$": "<rootDir>/test-renderer-shim.js"
    },
    "collectCoverageFrom": [
      "App.tsx",
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/types/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
