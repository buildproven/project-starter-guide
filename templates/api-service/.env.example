# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/api_db

# Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=replace-with-strong-secret

# Security
CORS_ORIGIN=http://localhost:3000

# Proxy Configuration
# IMPORTANT: Set to 'true' when deployed behind a reverse proxy (Nginx, CloudFlare, AWS ALB, Vercel, etc.)
# This ensures rate limiting and security features use real client IPs from X-Forwarded-For headers
# Leave as 'false' for direct deployments without a proxy
TRUST_PROXY=false
