{
  "name": "saas-level-1-starter",
  "version": "2.2.0",
  "description": "A simple SaaS starter template with Next.js, Tailwind CSS, and Stripe integration",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prisma:generate": "node scripts/prisma-generate.mjs",
    "prebuild": "npm run prisma:generate",
    "lint": "eslint . --ext .js,.jsx,.mjs,.cjs,.ts,.tsx --max-warnings=0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules .next .npm-cache dist build coverage && npm cache clean --force",
    "security:audit": "npm audit --audit-level high",
    "security:secrets": "node -e \"const fs=require('fs');const content=fs.readFileSync('package.json','utf8');if(/[\\\"\\'][a-zA-Z0-9+/]{20,}[\\\"\\']/.test(content)){console.error('❌ Potential hardcoded secrets in package.json');process.exit(1)}else{console.log('✅ No secrets detected in package.json')}\"",
    "lint:fix": "eslint . --ext .js,.jsx,.mjs,.cjs,.ts,.tsx,.html --fix && stylelint \"src/**/*.{css,scss,sass,less,pcss}\" --fix --allow-empty-input",
    "prepare": "husky",
    "test": "vitest run --pool=threads --passWithNoTests",
    "test:unit": "vitest run src/components/__tests__ src/app/__tests__ --passWithNoTests",
    "test:integration": "vitest run src/app/api/__tests__ --passWithNoTests",
    "test:smoke": "vitest run tests/smoke --passWithNoTests",
    "test:coverage": "vitest run --pool=threads --coverage",
    "test:watch": "vitest watch",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test && npm run test:accessibility",
    "test:accessibility": "bash scripts/axe-smoke.sh",
    "validate:all": "npm run type-check && npm run lint && npm run test",
    "quality:check": "npm run type-check && npm run lint && npm run test:all",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@stripe/stripe-js": "^8.7.0",
    "autoprefixer": "^10.4.24",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-auth": "^4.24.0",
    "nodemailer": "^8.0.1",
    "postcss": "^8.4.0",
    "prisma": "^7.3.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "server-only": "^0.0.1",
    "stripe": "^20.3.1",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.1",
    "@eslint/js": "^10.0.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.9.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.4",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.8"
  },
  "keywords": [
    "saas",
    "nextjs",
    "stripe",
    "tailwind",
    "typescript",
    "starter"
  ],
  "author": "Your Name",
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx,mjs,cjs,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "esbuild": "0.25.12",
    "glob": "^10.5.0"
  },
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  }
}
